<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout_list_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/list_item_margin_vertical"
    android:paddingLeft="@dimen/list_item_margin_horizontal_left"
    android:paddingRight="@dimen/list_item_margin_horizontal_right"
    android:paddingTop="@dimen/list_item_margin_vertical">

    <ImageView
        android:id="@+id/widget_image_small_icon"
        android:layout_width="@dimen/small_icon"
        android:layout_height="@dimen/small_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/content_description_small_icon"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/widget_text_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/widget_image_small_icon"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/widget_text_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/widget_image_small_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/widget_text_notification_time"
        android:layout_toRightOf="@id/widget_image_small_icon"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_text_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/widget_text_notification_title"
        android:layout_alignRight="@id/widget_text_notification_title"
        android:layout_below="@id/widget_text_notification_title"
        android:layout_marginTop="10dp" />
<!--
    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/widget_text_notification_text" />
-->
    <ImageView
        android:id="@+id/widget_image_app_icon"
        android:layout_width="@dimen/icon_app"
        android:layout_height="@dimen/icon_app"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/content_description_app_icon"
        android:scaleType="fitCenter" />

</RelativeLayout><!-- From: file:/Users/prasant/AndroidstudioProjects/NotificationSaver/app/src/main/res/layout/widget_item.xml -->